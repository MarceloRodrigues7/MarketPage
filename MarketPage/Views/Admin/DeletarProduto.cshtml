@model ItemImagem
@{
    ViewData["Title"] = "Deletar Produto";
    var data = ViewBag.Categorias;
}
<div class="row justify-content-center mt-3">
    <div class="card col-8">
        <strong class="text-secondary mt-4 ml-2"><i class="fas fa-tag mr-2"></i>Deletar Produto</strong>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Message"].ToString()
            </div>
        }
        @using (Html.BeginForm("DeleteProduto", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation mt-3 ml-2 mr-2", @novalidate = true }))
        {
            @Html.HiddenFor(m => m.Id);
            <div class="row mb-3">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Nome</label>
                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @type = "text", @readonly = "true" })

                    </div>
                </div>
                <div class="col">
                    <label class="visually-hidden">Categoria</label>
                    @Html.DropDownListFor(m => m.Categoria,
                                     new SelectList(ViewBag.Categorias, "Id", "Nome"), new { @class = "form-control", @readonly = "true", @enabled = "false" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Valor</label>
                        @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", @type = "text", @readonly = "true" })
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Tamanhos</label>
                        @Html.TextBoxFor(m => m.Tamanhos, new { @class = "form-control", @type = "text", @readonly = "true" })
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Quantidade</label>
                        @Html.TextBoxFor(m => m.Quantidade, new { @class = "form-control", @type = "number", @readonly = "true" })
                    </div>
                </div>
            </div>

            <div class="form-outline mb-3">
                <label class="form-label">Descrição</label>
                @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @type = "text", @rows = "4", @readonly = "true" })

            </div>

            <div class="mt-4 text-right">
                <a type="button" class="btn btn-secondary mb-3" href="javascript:history.back()">
                    <i class="fas fa-arrow-circle-left mr-2"></i>Voltar
                </a>
                <button type="submit" class="btn btn-danger mb-3">
                    <i class="far fa-trash-alt mr-2"></i>Deletar
                </button>
            </div>
        }
    </div>
</div>