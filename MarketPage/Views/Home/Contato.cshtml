@{
    ViewData["Title"] = "Contato";
}
<section class="page-section about-heading">
    <div class="container mt-3">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="bg-faded rounded pb-5">
                        <div class="row">
                            <div class="col-6">
                                <h4 class="text-center mb-3">
                                    <span class="text-secondary">Vendas no Atacado e Varejo</span>
                                </h4>
                                <div class="row mb-3">
                                    <div class="col">
                                        <button type="button" class="btn btn-secondary">
                                            <i class="fab fa-whatsapp"></i>Whatsapp
                                        </button>
                                    </div>
                                    <div class="col">
                                        <button type="button" class="btn btn-secondary">
                                            <i class="fab fa-facebook"></i>Facebook
                                        </button>
                                    </div>
                                    <div class="col">
                                        <button type="button" class="btn btn-secondary">
                                            <i class="fab fa-instagram"></i>Instagram
                                        </button>
                                    </div>
                                </div>
                                <p class="text-secondary">
                                    Seu atendimento é prioritário para nós.<br />
                                    Utilize os canais de comunicação acima ou envie uma mensagem com o formulário ao lado.
                                </p>
                            </div>
                            <div class="col-6">
                                @using (Html.BeginForm("PostMessage", "Message", FormMethod.Post, new { @class = "needs-validation", @novalidate = true }))
                                {
                                    @Html.ValidationSummary()
                                    @Html.AntiForgeryToken()
                                    <div class="container">
                                        @if (TempData["Message"] != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @TempData["Message"].ToString()
                                            </div>
                                        }
                                        <div class="card border-secondary rounded-0">
                                            <div class="card-header p-0">
                                                <div class="bg-secondary text-white text-center py-2">
                                                    <h5>Contato</h5>
                                                    <p class="m-0">Formúlario de contato</p>
                                                </div>
                                            </div>
                                            <div class="card-body p-3">
                                                <div class="form-group">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-prepend">
                                                            <div class="input-group-text"><i class="fa fa-user text-secondary"></i></div>
                                                        </div>
                                                        @if (User.IsInRole("Usuario_Comum") || User.IsInRole("Usuario_Admin"))
                                                        {
                                                            <input type="text" class="form-control" id="nome" name="nome" value="@ViewBag.Usuario.Nome" required>
                                                        }
                                                        else
                                                        {
                                                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" required>
                                                        }

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-prepend">
                                                            <div class="input-group-text"><i class="fa fa-envelope text-secondary"></i></div>
                                                        </div>
                                                        @if (User.IsInRole("Usuario_Comum") || User.IsInRole("Usuario_Admin"))
                                                        {
                                                            <input type="email" class="form-control" id="email" name="email" value="@ViewBag.Usuario.Email" required>
                                                        }
                                                        else
                                                        {
                                                            <input type="email" class="form-control" id="email" name="email" placeholder="exemple@email.com" required>
                                                        }

                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-prepend">
                                                            <div class="input-group-text"><i class="fa fa-comment text-secondary"></i></div>
                                                        </div>
                                                        <textarea class="form-control" placeholder="Texto da mensagem..." required></textarea>
                                                    </div>
                                                </div>
                                                <div class="text-center">
                                                    <input type="submit" value="Enviar" class="btn btn-secondary btn-block rounded-0 py-2">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="row d-flex justify-content-center">
                    <img class="img-fluid rounded mb-3 mb-lg-0" src="/img/about.jpg">
                </div>*@
        </div>
    </div>
</section>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
