@using ADO
@model MessageContato
@{
    ViewData["Title"] = "Contato";
}
<section class="page-section about-heading">
    <div class="container mt-3">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="bg-faded rounded pb-5">
                        <div class="row">
                            <div class="col-6">
                                <h4 class="text-center mb-3">
                                    <span class="text-secondary">Vendas no Atacado e Varejo</span>
                                </h4>
                                <div class="row mb-3">
                                    <div class="col">
                                        <a type="button" class="btn btn-secondary" href="https://wa.me/5519991392232" target="_blank">
                                            <i class="fab fa-whatsapp"></i>
                                            <br />
                                            <label>Whatsapp</label>
                                        </a>
                                    </div>
                                    <div class="col">
                                        <a type="button" class="btn btn-secondary" href="https://www.facebook.com/patricia.moraesteixeira" target="_blank">
                                            <i class="fab fa-facebook-f"></i>
                                            <br />
                                            <label>Facebook</label>
                                        </a>
                                    </div>
                                    <div class="col">
                                        <a type="button" class="btn btn-secondary" href="https://www.instagram.com/patriciamoraessemijoias/" target="_blank">
                                            <i class="fab fa-instagram"></i>
                                            <br />
                                            <label>Instagram</label>
                                        </a>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-body">
                                        <p class="card-text text-secondary">
                                            Seu atendimento é prioritário para nós.
                                            <br />
                                            Utilize os canais de comunicação acima ou envie uma mensagem com o formulário ao lado.
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <div class="col-6">
                                @using (Html.BeginForm("PostMessageContato", "Home", FormMethod.Post, new { @class = "needs-validation", @novalidate = true }))
                                {
                                    @Html.ValidationSummary()
                                    @Html.AntiForgeryToken()
                                    <div class="container">
                                        @if (TempData["Message"] != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @TempData["Message"].ToString()
                                            </div>
                                        }
                                        <div class="card border-secondary rounded-0">
                                            <div class="card-header p-0">
                                                <div class="bg-secondary text-white text-center py-2">
                                                    <h5>Formúlario de contato</h5>
                                                </div>
                                            </div>
                                            <div class="card-body p-3">
                                                <div class="form-group">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-prepend">
                                                            <div class="input-group-text"><i class="fa fa-user text-secondary"></i></div>
                                                        </div>
                                                        @Html.TextBoxFor(model => model.Nome, new { @type = "text", @class = "form-control", @id = "txtNome", @required = true })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-prepend">
                                                            <div class="input-group-text"><i class="fa fa-envelope text-secondary"></i></div>
                                                        </div>
                                                        @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control", @id = "txtEmail", @required = true })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group mb-2">
                                                        <div class="input-group-prepend">
                                                            <div class="input-group-text"><i class="fa fa-comment text-secondary"></i></div>
                                                        </div>
                                                        @Html.TextAreaFor(model => model.Texto, new { @type = "text", @class = "form-control", @id = "txtTexto", @placeholder = "Texto da mensagem...", @required = true })
                                                    </div>
                                                </div>
                                                <div class="text-center">
                                                    <input type="submit" value="Enviar" class="btn btn-secondary btn-block rounded-0 py-2">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
