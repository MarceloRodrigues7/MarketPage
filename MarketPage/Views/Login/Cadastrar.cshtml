@using ADO
@model Usuario
@{
    ViewData["Title"] = "Cadastrar";
}
<div class="row justify-content-center mt-3">
    <div class="card col-8">
        <div class="card-subtitle mt-3">
            <div class="text-center">
                <h4 class="text-secondary">Novo Cadastro<i class="fas fa-user-plus ml-2"></i></h4>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("PostUsuario", "Login", FormMethod.Post, new { @class = "needs-validation" }))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["Message"].ToString()
                    </div>
                }
                @if (TempData["Alert"] != null)
                {
                    <div class="alert alert-warning" role="alert">
                        @TempData["Alert"].ToString()
                    </div>
                }
                <div class="row mb-3">
                    <div class="col">
                        <label for="lblUsername" class="text-body">Username <i class="text-danger">*</i></label>
                        @Html.TextBoxFor(model => model.Username, new { @type = "text", @class = "form-control", @id = "txtUsername", @required = true })
                    </div>
                    <div class="col">
                        <label for="lblPassword" class="text-body">Password <i class="text-danger">*</i></label>
                        @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @id = "txtPassword", @placeholder = "*****", @required = true })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="lblEmail" class="text-body">Email <i class="text-danger">*</i></label>
                        @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control", @id = "txtEmail", @placeholder = "exemplo@seu.email", @required = true })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="lblNome" class="text-body">Nome <i class="text-danger">*</i></label>
                        @Html.TextBoxFor(model => model.Nome, new { @type = "text", @class = "form-control", @id = "txtNome", @required = true })
                    </div>
                    <div class="col">
                        <label for="lblSobrenome" class="text-body">Sobrenome</label>
                        @Html.TextBoxFor(model => model.Sobrenome, new { @type = "text", @class = "form-control", @id = "txtSobrenome" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="dtDataNascimento">Nº Telefone <i class="text-danger">*</i></label>
                        @Html.TextBoxFor(model => model.Telefone, new { @type = "text", @class = "form-control", @id = "txtTelefone", @required = true, @placeholder="(00) 90000-0000" })
                    </div>
                    <div class="col">
                        <label for="dtDataNascimento">Data Nascimento <i class="text-danger">*</i></label>
                        @Html.TextBoxFor(model => model.DataNascimento, new { @type = "Date", @class = "form-control", @id = "dtDataNascimento", @min = "1/1/1753", @required = true })
                    </div>
                </div>
                <div class="row mb-2 ml-2 mt-2">
                    <div class="col">
                        @Html.CheckBoxFor(model => model.PermiteEmail, new { @type = "checkbox", @class = "form-check-input" })
                        <label class="form-check-label text-secondary" style="font-size:13px"><i>Permito envios de correio eletronico promocional.</i></label>
                    </div>
                </div>
                <div class="row mb-2 ml-2">
                    <div class="col">
                        @Html.CheckBoxFor(model => model.ConcordaRegras, new { @type = "checkbox", @class = "form-check-input", @required = true })
                        <label class="form-check-label text-secondary" style="font-size:13px"><i>Aceito as <a href="~/Home/Termos">Regras e Termos.</a></i> <i class="text-danger">*</i></label>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-primary" id="btnEnviar">Cadastrar</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
<script type="text/javascript">$("#txtTelefone").mask("(00) 0000-00000");</script>