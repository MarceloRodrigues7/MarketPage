
@{
    ViewData["Title"] = "Painel Admin";
    var TotalPedidos = ViewBag.ResumoPedidos[0];
    var TAprovado = ViewBag.ResumoPedidos[2];
    var TAutorizado = ViewBag.ResumoPedidos[3];
    var TPendente = ViewBag.ResumoPedidos[1];
    var TEmProcesso = ViewBag.ResumoPedidos[4];
    var TEmMediacao = ViewBag.ResumoPedidos[5];
    var TCancelado = ViewBag.ResumoPedidos[7];
    var TDevolvido = ViewBag.ResumoPedidos[8];
    var TRejeitado = ViewBag.ResumoPedidos[6];
    var TCobradoVolta = ViewBag.ResumoPedidos[9];
}

<div class="container">
    <div class="row mt-1 justify-content-center">
        <h4 class="text-center text-secondary ml-3 mb-1 mt-3">Painel</h4>
    </div>
    @* Navbar admin *@
    <div class="wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="btn btn-info btn-sm mr-2" asp-area="" asp-controller="Admin" asp-action="Categoria">
                <i class="fas fa-tasks mr-1"></i>
                <span>Categorias</span>
            </a>
            <a class="btn btn-info btn-sm mr-2" asp-area="" asp-controller="Admin" asp-action="Produto">
                <i class="fas fa-tasks mr-1"></i>
                <span>Produtos</span>
            </a>

            <a class="btn btn-info btn-sm mr-2">
                <i class="fas fa-tasks mr-1"></i>
                <span>Pedidos</span>
            </a>

            <a class="btn btn-info btn-sm mr-2" asp-area="" asp-controller="Admin" asp-action="MensagensContato">
                <i class="fas fa-tasks mr-1"></i>
                <span>Mensagens</span>
            </a>

            <a class="btn btn-info btn-sm mr-2" asp-area="" asp-controller="Admin" asp-action="CodPromocional">
                <i class="fas fa-tasks mr-1"></i>
                <span>Cod. Promo.</span>
            </a>

        </nav>
    </div>
    <br />
    @* Pedidos *@
    <div class="wrapper">
        <div class="card">
            <strong class="text-secondary mt-2 ml-3 mb-2"><i class="fas fa-boxes mr-2"></i>Resumo Pedidos</strong>
            
            <div class="card-group ml-1 mr-1 mb-1">
                <div class="card">
                    <div class="card-text text-center text-secondary">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Total: @TotalPedidos</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-group ml-1 mr-1 mb-1">
                <div class="card">
                    <div class="card-text text-center text-success">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Aprovado: @TAprovado</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-success">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Autorizado: @TAutorizado</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-success">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Finalizado: 0</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-group ml-1 mr-1 mb-1">
                <div class="card">
                    <div class="card-text text-center text-warning">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Pendente: @TPendente</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-warning">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Processando: @TEmProcesso</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-warning">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Mediando: @TEmMediacao</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-group ml-1 mr-1 mb-1">
                <div class="card">
                    <div class="card-text text-center text-info">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Preparando: 0</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-info">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Enviado: 0</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-info">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Entrege: 0</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-group ml-1 mr-1 mb-1">
                <div class="card">
                    <div class="card-text text-center text-danger">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Cancelado: @TCancelado</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-danger">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Devolvido: @TDevolvido</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-danger">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Rejeitado: @TRejeitado</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-text text-center text-danger">
                        <a class="btn btn-sm" style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("", "") + "'");">
                            <strong>Estorno: @TCobradoVolta</strong><i class="fas fa-eye ml-2"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>


</div>


