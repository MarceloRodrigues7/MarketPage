@model Usuario
@{
    ViewData["Title"] = "Entrar";
}

@using (Html.BeginForm("AutenticacaoUsuario", "Login", FormMethod.Post, new { @class = "needs-validation" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-3 text-center">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Message"].ToString()
                        </div>
                    }
                    <h3 class="text-secondary mb-3">Entrar <i class="fas fa-sign-in-alt pl-2"></i></h3>

                    <div class="row d-flex justify-content-center">
                        <div class="col-8 mb-2">
                            <label class="form-label" for="lblusername">Username</label>
                            @Html.TextBoxFor(model => model.Username, new { @type = "text", @class = "form-control", @id = "txtUsername", @required = true })
                        </div>
                    </div>

                    <div class="row d-flex justify-content-center">
                        <div class="col-8 mb-2">
                            <label class="form-label" for="lblPassword">Password</label>
                            @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @id = "txtPassword", @required = true })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8 ml-2">
                            <label><a href="~/Login/EsqueciMinhaSenha" style="font-size:14px">Esqueci minha senha</a></label>
                        </div>
                    </div>
                    <button class="btn btn-primary mt-3" type="submit">Acessar</button>
                </div>
            </div>
        </div>
    </div>
}
