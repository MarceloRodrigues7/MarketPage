@model List<ItemViewProduto>
@{
    ViewData["Title"] = "Carrinho";

    var list = new List<decimal>();
    foreach (var i in Model)
    {
        var t = i.Quantidade * i.Valor;
        list.Add(t);
    };
    decimal? valorTotal = 0;
    if (list.Any())
    {
        if (Model.FirstOrDefault().ValorDesconto != null)
        {
            valorTotal = list.Sum() - (list.Sum() * Model.FirstOrDefault().ValorDesconto);
        }
        else
        {
            valorTotal = list.Sum();
        }
    }

}

@using (Html.BeginForm("PostPedido", "Login", FormMethod.Post, new { @class = "needs-validation", @novalidate = true }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="card mt-3">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-md-10 col-md-offset-1">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-danger mt-4" role="alert">
                        @TempData["Message"].ToString()
                    </div>
                }
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-secondary">Produtos</th>
                            <th class="text-secondary text-center">Qtd.</th>
                            <th class="text-secondary text-center">Preço Un.</th>
                            <th class="text-secondary text-center">Preço Tot.</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @*Itens*@
                        @foreach (var item in Model)
                        {
                            var total = item.Valor * item.Quantidade;
                            <tr>
                                <td class="col-sm-8 col-md-6">
                                    <div class="media">
                                        @{
                                            var base64 = Convert.ToBase64String(item.Img);
                                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                        }
                                        <img class="media-object" src='@imgSrc' style="width: 72px; height: 72px;" />
                                        <div class="media-body">
                                            <p class="media-heading ml-2 text-secondary" style="font-size:16px"><strong>@item.Nome</strong></p>
                                            @if (!string.IsNullOrEmpty(item.Tamanhos))
                                            {
                                                <h6 class="media-heading ml-2 text-secondary">Tam.: <strong>@item.Tamanhos</strong></h6>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="col-1" style="text-align: center; vertical-align: middle;">
                                    <input type="text" class="form-control text-center" value="@item.Quantidade" readonly />
                                </td>
                                <td class="col-1" style="text-align: center; vertical-align: middle;">
                                    <div class="text-center">R$@item.Valor</div>
                                </td>
                                <td class="col-1" style="text-align: center; vertical-align: middle;">
                                    <div class="text-center">R$@total</div>
                                </td>
                                <td class="col-1" style="text-align: center; vertical-align: middle;">
                                    <button type="button" class="btn btn-outline-danger" title="Remover" onclick="location.href='@Url.Action("DeleteItemCarrinho", "Login", new { item = item.Id })'">
                                        <span><i class="fas fa-trash-alt"></i></span>
                                    </button>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
                @if (Model.Any())
                {
                    <div class="row ml-1">
                        <div class="col d-flex">
                            <label class="col-form-label mr-3"><b>Tipo do Frete:</b></label>
                            <div class="form-check form-check-inline">
                                @Html.RadioButtonFor(m => m.FirstOrDefault().TipoFrete, "SEDEX - R$20,00", new { @class = "form-check-input", @type = "radio" })
                                <label class="form-check-label mr-2">SEDEX - R$20,00</label>
                                @Html.RadioButtonFor(m => m.FirstOrDefault().TipoFrete, "PAC - R$15,00", new { @class = "form-check-input", @type = "radio" })
                                <label class="form-check-label">PAC - R$15,00</label>
                                <button class="btn btn-info ml-3">Selecionar</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row ml-1">
                        <div class="col d-flex">

                            @if (Model.FirstOrDefault().CodPromocional != null)
                            {
                                <label class="col-form-label mr-3">Cupom Promocional (Aplicado)</label>
                                @Html.TextBoxFor(m => m.FirstOrDefault().CodPromocional, new { @class = "form-control col-6", @readonly = true })
                            }
                            else
                            {
                                <label class="col-form-label mr-3"><strong>Cupom Promocional </strong> (Opcional)</label>
                                <input type="text" class="form-control col-6" name="txtCodPromo" />
                                <button class="btn btn-info ml-2" style="cursor:pointer" onclick="ValidaCodPromo()">Verificar</button>
                            }

                        </div>
                    </div>
                }
                <hr />
                @*Total*@
                <div class="row ml-1 mt-3">
                    <h5 style="font-size:18px">Total: R$@valorTotal</h5>
                </div>

                @* Botões *@
                <div class="float-right mb-3 mt-1">
                    <a type="button" class="btn btn-secondary mr-1" href="javascript:history.back()">
                        <i class="fas fa-arrow-circle-left mr-2"></i>Voltar
                    </a>
                    <button class="btn btn-success" type="submit"><i class="fas fa-shopping-cart mr-2"></i>Finalizar</button>
                </div>
            </div>
        </div>
    </div>
}

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

<script>
    function ValidaCodPromo() {
        var form = document.forms[0]
        var element = form.querySelector('input[name="txtCodPromo"')
        window.location.href = 'ValidarCodPromo/?CodPromocional=' + element.value
    }
</script>