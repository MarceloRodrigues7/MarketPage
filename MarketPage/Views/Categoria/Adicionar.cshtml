@model Categoria
@{
    ViewData["Title"] = "Adicionar Categoria";
}

<div class="row justify-content-center mt-3">
    <div class="card col-8">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Message"].ToString()
            </div>
        }
        @using (Html.BeginForm("PostCategoria", "Categoria", FormMethod.Post, new { @class = "needs-validation mt-3 ml-2 mr-2", @novalidate = true }))
        {
            <form class="mt-3 ml-2 mr-2">
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label">Nome</label>
                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @type = "text" })
                        </div>
                    </div>

                    <div class="col-2">
                        <label class="form-label"></label>
                        <div class="form-outline form-control mt-2">
                            @Html.CheckBoxFor(m => m.Ativo, new { @class = "form-check-input", @type = "checkbox", @checked = "true" })
                            <label class="form-label">Ativo</label>
                        </div>
                    </div>

                </div>

                <div class="text-center mb-3">
                    <button class="btn btn-primary" type="submit">Adicionar</button>
                </div>

            </form>
        }
        </div>
</div>