@model Pedido
@{
    ViewData["Title"] = "Pedido " + Model.Id;
    var codPedido = $"{Model.IdUsuario}{Model.Id}";
    var valorTotal = $"R${Model.ValorTotal}";
}

<div class="row d-flex justify-content-center align-items-center">
    <div class="card shadow border-left-primary mt-2">
        <div class="card-title">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Message"].ToString()
                </div>
            }
            <div class="row">

            </div>
        </div>
        <div class="card-body">
            <div class="container">
                <strong class="text-secondary"><i class="fas fa-user mr-2"></i>Descrição do Pedido</strong>
                <div class="row mb-2 ml-1 mt-2">
                    <div class="col-2">
                        <label for="lblNome" class="text-body text-secondary">Codigo</label>
                        <input type="text" class="form-control" id="txtCidade" value="@codPedido" readonly />
                    </div>
                    <div class="col-3">
                        <label for="lblNome" class="text-body text-secondary">Status Pedido</label>
                        @Html.TextBoxFor(model => model.StatusAtual, new { @type = "text", @class = "form-control", @id = "txtNome", @readonly = true })
                    </div>
                    <div class="col-3">
                        <label for="lblNome" class="text-body text-secondary">Data Realiz.</label>
                        @Html.TextBoxFor(model => model.DataRealizacao, new { @type = "text", @class = "form-control", @id = "txtNome", @readonly = true })
                    </div>
                    <div class="col-2">
                        <label for="lblNome" class="text-body text-secondary">Valor Total</label>
                        <input type="text" class="form-control" id="txtCidade" value="@valorTotal" readonly />
                    </div>
                </div>
                <div class="row mb-2 ml-1 mt-2">
                    @if (Model.DataAtualizacao != null)
                    {
                        <div class="col-3">
                            <label for="lblNome" class="text-body text-secondary">Data Atualiz.</label>
                            @Html.TextBoxFor(model => model.DataAtualizacao, new { @type = "text", @class = "form-control", @id = "txtNome", @readonly = true })
                        </div>
                    }
                    @if (Model.DateFinalizacao != null)
                    {
                        <div class="col-3">
                            <label for="lblNome" class="text-body text-secondary">Data Finaliz.</label>
                            @Html.TextBoxFor(model => model.DateFinalizacao, new { @type = "text", @class = "form-control", @id = "txtNome", @readonly = true })
                        </div>
                    }
                </div>
                <hr />

                <strong class="text-secondary"><i class="fas fa-map-marked-alt mr-2"></i>Endereço de Envio</strong>
                <div class="row mb-2 ml-1 mt-2">
                    <div class="col-4">
                        <label for="lblPais" class="text-body text-secondary">País</label>
                        <input type="text" class="form-control" id="txtPais" value="@Model.Pais" readonly />
                    </div>
                    <div class="col-4">
                        <label for="lblEstado" class="text-body text-secondary">Estado</label>
                        <input type="text" class="form-control" id="txtEstado" value="@Model.Estado" readonly />
                    </div>
                    <div class="col-4">
                        <label for="lblCidade" class="text-body text-secondary">Cidade</label>
                        <input type="text" class="form-control" id="txtCidade" value="@Model.Cidade" readonly />
                    </div>
                </div>
                <div class="row mb-2 ml-1">
                    <div class="col-9">
                        <label for="lblBairro" class="text-body text-secondary">Bairro</label>
                        <input type="text" class="form-control" id="txtBairro" value="@Model.Bairro" readonly />
                    </div>
                    <div class="col-3">
                        <label for="lblNumero" class="text-body text-secondary">Nº</label>
                        <input type="text" class="form-control" id="txtNumero" value="@Model.Numero" readonly />
                    </div>
                </div>
                <hr />

                <div class="row justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary ml-1 mr-1" id="btnAcc" onclick="@("window.location.href='" + @Url.Action("", "Admin",Model) + "'");" disabled>Deletar</button>
                </div>
                <hr />

                <strong class="text-secondary"><i class="fas fa-map-marked-alt mr-2"></i>Itens do Pedido</strong>
                <div class="row justify-content-center mb-2 ml-1 mt-2">
                    <div class="col-10">
                        <table class="table">
                            <tr>
                                <th class="text-secondary">Cod Prod.</th>
                                <th class="text-secondary text-center">Valor</th>
                                <th class="text-secondary text-center">Tamanho</th>
                                <th class="text-secondary text-center">Qtde.</th>
                            </tr>
                            <tbody>

                                @foreach (var item in ViewBag.ItensPedido)
                                {
                                    <tr>
                                        <td>@item.IdItem</td>
                                        <td class="text-center">R$@item.Valor</td>
                                        <td class="text-center">@item.Tamanhos</td>
                                        <td class="text-center">@item.Quantidade</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <hr />

            </div>
        </div>
    </div>
</div>