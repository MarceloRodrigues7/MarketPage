@model ItemImagem
@{
    ViewData["Title"] = "Editar Produto";
    var data = ViewBag.Categorias;
}
<div class="row justify-content-center mt-3">
    <div class="card col-8">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Message"].ToString()
            </div>
        }
        @using (Html.BeginForm("PostProduto", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation mt-3 ml-2 mr-2", @novalidate = true }))
        {
            <div class="row mb-3">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Nome</label>
                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @type = "text" })

                    </div>
                </div>
                <div class="col">
                    <label class="visually-hidden">Categoria</label>
                    @Html.DropDownListFor(m => m.Categoria,
                                     new SelectList(ViewBag.Categorias, "Id", "Nome"), new { @class = "form-control" })
                </div>
                <div class="col-2">
                    <label class="form-label"></label>
                    <div class="form-outline form-control mt-2">
                        @Html.CheckBoxFor(m => m.Destaque, new { @class = "form-check-input", @type = "checkbox" })
                        <label class="form-label">Destaque</label>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Valor</label>
                        @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", @type = "text" })

                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Tamanhos</label>
                        @Html.TextBoxFor(m => m.Tamanhos, new { @class = "form-control", @type = "text" })
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Quantidade</label>
                        @Html.TextBoxFor(m => m.Quantidade, new { @class = "form-control", @type = "number" })
                    </div>
                </div>
            </div>

            <div class="form-outline mb-3">
                <label class="form-label">Imagem do Produto</label>
                <div class="col form-control pt-1">
                    @Html.TextBoxFor(m => m.ImageUpload, new { type = "file", @class = "form-control-file" })
                </div>
            </div>

            <div class="form-outline mb-3">
                <label class="form-label">Descrição</label>
                @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @type = "text", @rows = "4" })

            </div>

            <div class="mt-4 text-right">
                <a type="button" class="btn btn-secondary mb-3" href="javascript:history.back()">
                    <i class="fas fa-arrow-circle-left mr-2"></i>Voltar
                </a>
                <button type="submit" class="btn btn-primary mb-3"><i class="fas fa-edit mr-1"></i>Editar</button>
            </div>
        }
    </div>
</div>