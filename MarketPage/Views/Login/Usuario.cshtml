@model Usuario
@{
    ViewData["Title"] = "Cadastro";
}
<div class="row d-flex justify-content-center align-items-center">
    <div class="card shadow border-left-primary mt-2">
        <div class="card-title">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Message"].ToString()
                </div>
            }
            <div class="row">
                <div class="col text-secondary text-center mt-3">
                    <h4><i class="fas fa-user mr-2"></i>Cadastro</h4>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row mb-2">
                    <div class="col-4">
                        <label for="lblNome" class="text-body">Nome</label>
                        @Html.TextBoxFor(model => model.Nome, new { @type = "text", @class = "form-control", @id = "txtNome", @readonly = true })
                    </div>
                    <div class="col-5">
                        <label for="lblSobrenome" class="text-body">Sobrenome</label>
                        @Html.TextBoxFor(model => model.Sobrenome, new { @type = "text", @class = "form-control", @id = "txtSobrenome", @readonly = true })
                    </div>
                    <div class="col-3">
                        <label for="lblDataNascimento">Data Nascimento</label>
                        <input type="text" class="form-control text-center" ,id="txtDataNascimento" value="@Model.DataNascimento.ToString("dd/MM/yyyy")" readonly />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <label for="lblEmail" class="text-body">Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control", @id = "txtEmail", @readonly = true })
                    </div>
                </div>
                <div class="row justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary ml-1 mr-1" id="btnEnviar" onclick="@("window.location.href='" + @Url.Action("Cadastro", "Usuario") + "'");" disabled>Editar Conta</button>
                    <button type="submit" class="btn btn-primary ml-1 mr-1" id="btnEnviar" onclick="@("window.location.href='" + @Url.Action("Cadastro", "Usuario") + "'");" disabled>Pedidos</button>
                    <button type="submit" class="btn btn-primary ml-1 mr-1" id="btnEnviar" onclick="@("window.location.href='" + @Url.Action("Cadastro", "Usuario") + "'");" disabled>Carrinho</button>
                </div>
            </div>
        </div>
    </div>
</div>