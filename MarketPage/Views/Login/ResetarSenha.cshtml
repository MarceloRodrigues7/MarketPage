@model Usuario
@{
    ViewData["Title"] = "Resetar senha";
}

<div class="row justify-content-center mt-3">
    <div class="card col-8">
        <div class="card-subtitle ml-3 mt-3">
            <div class="text-center">
                <h4 class="text-secondary">Resetar senha<i class="fas fa-key ml-2"></i></h4>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("PostNovaSenha", "Login", FormMethod.Post, new { @class = "needs-validation", @novalidate = true }))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id);
                <div class="container">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Message"].ToString()
                        </div>
                    }
                    <div class="row">
                        <div class="col">
                            <label class="form-text">Nova Senha</label>
                            @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @id = "txtPassword", @required = true })
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-warning" id="btnEnviar">Confirmar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>